<resources>

    <style name="ActivityTV">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ActivityBTN">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/YP_black</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">336dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="background">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">44dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyToolbarTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:titleTextColor">@color/YP_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="RoundedTextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/YP_lightGray</item>
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>

    </style>

</resources>